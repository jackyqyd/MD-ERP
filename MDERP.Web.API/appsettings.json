    "ConnectionString": "Server=tcp:amanyagentdb.database.windows.net,1433;Initial Catalog=MDERP;Persist Security Info=False;User ID=lpnet;Password=password01!;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;",
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "NLog": {
        "autoReload": true,
        "throwConfigExceptions": true,
        "internalLogLevel": "Info",
        "internalLogFile": "${basedir}/internal-nlog.txt",
        "extensions": [
            { "assembly": "NLog.Extensions.Logging" }
        ],
        "time": {
            "type": "AccurateUTC"
        },
        "targets": {
            "all-file": {
                "type": "File",
                "maxArchiveFiles": "10",
                "archiveAboveSize": "5242880",
                "fileName": "NLog\\nlog-MDERP-${shortdate}.log",
                "layout": {
                    "type": "JsonLayout",
                    "Attributes": [
                        {
                            "name": "timestamp",
                            "layout": "${date:format=o}"
                        },
                        {
                            "name": "level",
                            "layout": "${level}"
                        },
                        {
                            "name": "logger",
                            "layout": "${logger}"
                        },
                        {
                            "name": "message",
                            "layout": "${message:raw=true}"
                        }
                    ]
                }

            }
        },
        "rules": [
            {
                "logger": "Microsoft.*",
                "maxLevel": "Warn",
                "final": true
            },
            {
                "logger": "*",
                "minLevel": "Info",
                "writeTo": "all-file"
            }
        ]
    }
}
